Algoritmo usando_casos
	Imprimir "Teclea un número"
	leer x
	Imprimir "Teclea otro número"
	leer r
	Imprimir "Menu Principal"
	Imprimir "1-. Suma"
	Imprimir "2-. Resta"
	Imprimir "3-. Multiplicación"
	Imprimir "Elije una opción"
	leer z
	Segun z Hacer
		1:
			a=x+r
			imprimir "El resultado de la suma es: ",a
		2:
			e=x-r
			imprimir "El resultado de la resta es: ",e
		3:
			m=x*r
			Imprimir "El resultado de la multiplicación es: ",m
			
	FinSegun
FinAlgoritmo
